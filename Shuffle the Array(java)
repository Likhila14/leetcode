class Solution {
    public int[] shuffle(int[] nums, int n) {
        int b = 0 ;
        int  k = n;
        int arr[] = new int[nums.length];
         for(int i = 0 ; i< n ; i++){
             arr[b] = nums[i];
             arr[b+1] = nums[k];
              k++ ;
             b = b+2 ;
         }
        
        return arr ;
    }
}
